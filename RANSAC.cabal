name:                RANSAC
version:             0.1.0.0
synopsis:            The RANSAC algorithm for parameter estimation.
description:         The "RANdom SAmple Consensus" (RANSAC) algorithm for estimating
                     the parameters of a mathematical model from a data set. See
                     <http://en.wikipedia.org/wiki/RANSAC> for more information.
license:             BSD3
license-file:        LICENSE
author:              Anthony Cowley
maintainer:          acowley@gmail.com
copyright:           (c) Anthony Cowley 2012
category:            Math
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  tests/Perf.hs, tests/LinearFit.hs

source-repository head
  type: git
  location: git://github.com/acowley/RANSAC.git

library
  exposed-modules:     Numeric.Ransac
  build-depends:       base >= 4.6 && < 5, 
                       vector >= 0.10, 
                       random >= 1.0
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall